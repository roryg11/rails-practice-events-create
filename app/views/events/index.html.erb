<%= link_to "New Event", new_event_path %>
<%= link_to "All Events", events_path %>

<table class="table">
  <thead>
    <tr>
      <th>
        Date
      </th>
      <th>
        Description
      </th>
      <th>
        Requires ID
      </th>
      <th>
        Capacity
      </th>
      <th>
        Directions
      </th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event|  %>
    <tr>
      <td><%= event.date %></td>
      <td><%= event.description %></td>
      <td><%= event.requires_id %></td>
      <td><%= event.capacity %></td>
      <td><%= event.directions %></td>
      <td><%= link_to "Edit", edit_event_path(event) %>
      <td><%= link_to "Delete", event_path(event), method: :delete, data: {confirm: "Are you sure you want to delete this doctor?"} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
